{% extends 'base.html.twig' %}

{% block title %}Créer un compte - Chess Teams{% endblock %}

{% block styles %}
<style>
    .registration-container {
        max-width: 500px;
        margin: 2rem auto;
        padding: 2rem;
        background: white;
        border-radius: var(--border-radius);
        box-shadow: var(--shadow-elevated);
    }

    .registration-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .registration-header h1 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 2rem;
        font-weight: 600;
    }

    .registration-header p {
        color: rgba(0, 0, 0, 0.6);
        margin: 0;
    }

    .form-field {
        margin-bottom: 1.5rem;
    }

    .form-field label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: var(--secondary-color);
    }

    .form-field input[type="email"],
    .form-field input[type="text"],
    .form-field input[type="password"] {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid #e0e0e0;
        border-radius: var(--border-radius);
        font-size: 1rem;
        transition: border-color var(--transition-fast);
        box-sizing: border-box;
    }

    .form-field input:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(25, 118, 210, 0.1);
    }

    .form-field .form-help {
        font-size: 0.85rem;
        color: rgba(0, 0, 0, 0.6);
        margin-top: 0.25rem;
    }

    .checkbox-field {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 1.5rem;
    }

    .checkbox-field input[type="checkbox"] {
        margin-top: 0.25rem;
        transform: scale(1.2);
    }

    .checkbox-field label {
        margin: 0;
        font-size: 0.95rem;
        line-height: 1.4;
    }

    .submit-button {
        width: 100%;
        background: linear-gradient(135deg, var(--primary-color), #64b5f6);
        color: white;
        border: none;
        padding: 0.875rem 2rem;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: var(--border-radius);
        cursor: pointer;
        transition: all var(--transition-fast);
        margin-bottom: 1.5rem;
    }

    .submit-button:hover {
        transform: translateY(-2px);
        box-shadow: var(--shadow-elevated);
    }

    .login-link {
        text-align: center;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }

    .login-link a {
        color: var(--primary-color);
        font-weight: 500;
        text-decoration: none;
    }

    .login-link a:hover {
        text-decoration: underline;
    }

    .field-icon {
        position: relative;
    }

    .field-icon i {
        position: absolute;
        left: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(0, 0, 0, 0.4);
        font-size: 20px;
    }

    .field-icon input {
        padding-left: 3rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="registration-container slide-up">
    <div class="registration-header">
        <h1><i class="material-icons" style="vertical-align: middle; margin-right: 0.5rem;">group_add</i>Créer un compte</h1>
        <p>Rejoignez la communauté Chess Teams et jouez en équipe !</p>
    </div>

    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="form-field">
            {{ form_label(registrationForm.email, 'Adresse e-mail') }}
            <div class="field-icon">
                <i class="material-icons">email</i>
                {{ form_widget(registrationForm.email, {
                    'attr': {
                        'placeholder': 'votre.email@exemple.com',
                        'autocomplete': 'email'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="form-field">
            {{ form_label(registrationForm.displayName, 'Pseudo') }}
            <div class="field-icon">
                <i class="material-icons">person</i>
                {{ form_widget(registrationForm.displayName, {
                    'attr': {
                        'placeholder': 'ChessPlayer123',
                        'maxlength': 50
                    }
                }) }}
            </div>
            <div class="form-help">
                <i class="material-icons tiny">info</i>
                Ce nom sera affiché aux autres joueurs dans les parties.
            </div>
            {{ form_errors(registrationForm.displayName) }}
        </div>

        <div class="form-field">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            <div class="field-icon">
                <i class="material-icons">lock</i>
                {{ form_widget(registrationForm.plainPassword, {
                    'attr': {
                        'placeholder': 'Au moins 6 caractères',
                        'autocomplete': 'new-password'
                    }
                }) }}
            </div>
            <div class="form-help">
                <i class="material-icons tiny">security</i>
                Minimum 6 caractères pour assurer la sécurité de votre compte.
            </div>
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="checkbox-field">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation et la politique de confidentialité') }}
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="submit-button">
            <i class="material-icons" style="vertical-align: middle; margin-right: 0.5rem;">person_add</i>
            Créer mon compte
        </button>

    {{ form_end(registrationForm) }}

    <div class="login-link">
        <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
    </div>
</div>
{% endblock %}
