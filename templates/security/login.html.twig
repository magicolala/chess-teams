{% extends 'base.html.twig' %}

{% block title %}Connexion - Chess Teams
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col s12 m6 offset-m3 l4 offset-l4">
			<div class="card">
				<div class="card-content">
					<span class="card-title center-align">
						<i class="material-icons medium blue-text">login</i>
					</span>
					<h4 class="center-align">Connexion</h4>
					
					{% if error %}
						<div class="card-panel red lighten-4 red-text text-darken-4">
							<i class="material-icons left">error</i>
							{{ error.messageKey|trans(error.messageData, 'security') }}
						</div>
					{% endif %}

					{% if app.user %}
						<div class="card-panel blue lighten-4 blue-text text-darken-4">
							<i class="material-icons left">info</i>
							Vous êtes connecté en tant que {{ app.user.userIdentifier }}
							<a href="{{ path('app_logout') }}" class="btn-flat blue-text">Se déconnecter</a>
						</div>
					{% endif %}

					<form method="post" data-turbo="false">
						<div class="row">
							<div class="input-field col s12">
								<i class="material-icons prefix">email</i>
								<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" autocomplete="email" required>
								<label for="inputEmail">Adresse email</label>
							</div>
						</div>
						
						<div class="row">
							<div class="input-field col s12">
								<i class="material-icons prefix">lock</i>
								<input type="password" name="_password" id="inputPassword" autocomplete="current-password" required>
								<label for="inputPassword">Mot de passe</label>
							</div>
						</div>

						<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						<div class="row">
							<div class="col s12 center-align">
								<button class="btn blue waves-effect waves-light" type="submit">
									<i class="material-icons left">login</i>
									Se connecter
								</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
