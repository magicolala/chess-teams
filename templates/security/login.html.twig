{% extends 'base.html.twig' %}

{% block title %}Connexion - Chess Teams
{% endblock %}

{% block body %}
	<div class="neo-animate-fadeIn">
		<div class="neo-flex neo-justify-center neo-items-start neo-min-h-screen neo-pt-2xl">
			<div class="neo-w-full neo-max-w-md">
				<div class="neo-card neo-animate-slideIn">
					<div class="neo-card-header neo-text-center">
						<div class="neo-text-4xl neo-mb-md">🔐</div>
						<h1 class="neo-card-title neo-text-xl">Connexion</h1>
					</div>
					<div class="neo-card-content">
						{% if error %}
							<div class="neo-alert neo-alert-error neo-mb-lg">
								❌ {{ error.messageKey|trans(error.messageData, 'security') }}
							</div>
						{% endif %}

						{% if app.user %}
							<div class="neo-alert neo-alert-info neo-mb-lg">
								ℹ️ Vous êtes connecté en tant que {{ app.user.userIdentifier }}
								<a href="{{ path('app_logout') }}" class="neo-btn neo-btn-sm neo-btn-secondary neo-ml-md">Se déconnecter</a>
							</div>
						{% endif %}

						<form method="post" data-turbo="false">
							<div class="neo-form-group">
								<label class="neo-label" for="inputEmail">
									📧 Adresse email
								</label>
								<input type="email" value="{{ last_username }}" name="_username" id="inputEmail" autocomplete="email" required class="neo-input">
							</div>
							
							<div class="neo-form-group">
								<label class="neo-label" for="inputPassword">
									🔒 Mot de passe
								</label>
								<input type="password" name="_password" id="inputPassword" autocomplete="current-password" required class="neo-input">
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="neo-btn neo-btn-primary neo-btn-full neo-animate-pulse" type="submit">
								🚀 Se connecter
							</button>
						</form>

						<div class="neo-text-center neo-mt-lg neo-pt-lg neo-border-t">
							<p class="neo-text-secondary">Pas encore de compte ?</p>
							<a href="{{ path('app_register') }}" class="neo-btn neo-btn-outline neo-btn-sm">
								👤 Créer un compte
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
